// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

// Better Auth Models
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified Boolean   @default(false)
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts Account[]
  sessions Session[]

  @@map("user")
}

model Account {
  id                String    @id @default(cuid())
  userId            String
  type              String    @default("oauth")
  provider          String
  providerId        String?   // Better Auth sends this - will be synced with provider via trigger
  providerAccountId String
  accountId         String    // Better Auth compatibility - should match providerAccountId
  refreshToken      String?   @db.Text @map("refresh_token")
  accessToken       String?   @db.Text @map("access_token")
  accessTokenExpiresAt DateTime? @map("access_token_expires_at")
  idToken           String?   @db.Text @map("id_token")
  expires_at        Int?      @map("expires_at")
  token_type        String?   @map("token_type")
  scope             String?
  session_state     String?   @map("session_state")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@unique([provider, accountId])
  @@map("account")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("session")
}

model VerificationToken {
  identifier String
  token       String   @unique
  expires     DateTime

  @@unique([identifier, token])
  @@map("verificationToken")
}

model Verification {
  id        String   @id @default(cuid())
  identifier String
  value     String
  expiresAt DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([identifier, value])
  @@map("verification")
}

// Video Model
model Video {
  id          String   @id @default(cuid())
  filename    String?
  url         String?
  status      String   @default("processing") // "processing", "ready", "error"
  transcript  String?  @db.Text
  segments    Json?    // Whisper segments with timestamps
  voiceSample String?  // Path to voice sample file
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([status])
  @@index([createdAt])
}
