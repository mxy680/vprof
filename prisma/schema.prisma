generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Video {
  id          String   @id @default(cuid())
  filename    String?
  url         String?
  status      String   @default("processing")
  transcript  String?
  segments    Json?
  voiceSample String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([status])
  @@index([createdAt])
}

